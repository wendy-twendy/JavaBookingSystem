<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotel.gui.controllers.GuestPortalHomeController"
            styleClass="main-container">

    <!-- Header -->
    <top>
        <VBox styleClass="header-container" alignment="CENTER">
            <Label fx:id="hotelNameLabel" text="Hotel" styleClass="header-label"/>
            <Label text="Guest Self-Service Portal" styleClass="subtitle-label"/>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="40" alignment="CENTER">
            <padding>
                <Insets top="60" right="30" bottom="30" left="30"/>
            </padding>

            <Label fx:id="welcomeLabel" text="Welcome!" styleClass="title-label"/>

            <Label text="Book your perfect room in just a few steps" styleClass="subtitle-label"/>

            <Button text="Browse Available Rooms" styleClass="portal-nav-button"
                    onAction="#handleBrowseRooms"/>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox styleClass="footer-container" alignment="CENTER" spacing="20">
            <Button text="Back" styleClass="button, button-secondary"
                    onAction="#handleBack"/>
        </HBox>
    </bottom>
</BorderPane>
