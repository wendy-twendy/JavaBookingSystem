<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hotel.gui.controllers.GuestBookingConfirmationController"
            styleClass="main-container">

    <!-- Header -->
    <top>
        <VBox styleClass="header-container" alignment="CENTER">
            <Label text="Booking Complete" styleClass="header-label"/>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="40" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Success Card -->
            <VBox spacing="20" styleClass="card, confirmation-success" alignment="CENTER" minWidth="400">
                <Label fx:id="confirmationLabel" text="Booking Confirmed!"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

                <Separator/>

                <Label fx:id="bookingIdLabel" text="Confirmation #: "
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <VBox spacing="10" alignment="CENTER">
                    <Label fx:id="roomLabel" text="Room" style="-fx-font-size: 16px;"/>
                    <Label fx:id="datesLabel" text="Dates" style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>
                    <Label fx:id="totalLabel" text="Total"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                </VBox>

                <Separator/>

                <Label fx:id="thankYouLabel" text="Thank you for your booking!"
                       style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>

                <HBox spacing="20" alignment="CENTER">
                    <VBox.margin>
                        <Insets top="10"/>
                    </VBox.margin>
                    <Button text="Done" styleClass="portal-nav-button" prefWidth="150" prefHeight="60"
                            onAction="#handleDone"/>
                    <Button text="Book Another Room" styleClass="button, button-primary" prefWidth="180"
                            onAction="#handleNewBooking"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
